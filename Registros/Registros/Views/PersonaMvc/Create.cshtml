@model PersonaModel

@{
    ViewData["Title"] = "Registrar Persona";
}

<h2>Registrar Persona</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label>Nombres</label>
        <input asp-for="Nombres" class="form-control" required />
    </div>

    <div class="form-group">
        <label>Apellidos</label>
        <input asp-for="Apellidos" class="form-control" required />
    </div>

    <div class="form-group">
        <label>Tipo de Documento</label>
        <select asp-for="TipoDocumento" class="form-control">
            <option value="CC">Cédula de Ciudadanía</option>
            <option value="TI">Tarjeta de Identidad</option>
            <option value="CE">Cédula de Extranjería</option>
        </select>
    </div>

    <div class="form-group">
        <label>Fecha de Nacimiento</label>
        <input asp-for="FechaNacimiento" type="date" class="form-control" required />
    </div>

    <div class="form-group">
        <label>Valor a Ganar</label>
        <input asp-for="ValorGanar" type="number" class="form-control" required />
    </div>

    <div class="form-group form-check">
        <input asp-for="EstadoCivil" class="form-check-input" type="checkbox" />
        <label class="form-check-label">Casado</label>
    </div>

    <button type="submit" class="btn btn-primary">Guardar</button>
</form>
